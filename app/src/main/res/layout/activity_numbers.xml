                    android:background="@drawable/image_background"/>

                <ImageButton
                    android:id="@+id/three"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="fitCenter"
                    android:layout_margin="5dp"
                    android:src="@raw/three"
                    android:background="@drawable/image_background"/>

                <ImageButton
                    android:id="@+id/four"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="fitCenter"
                    android:layout_margin="5dp"
                    android:src="@raw/four"
                    android:background="@drawable/image_background"/>

                <ImageButton
                    android:id="@+id/five"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="fitCenter"
                    android:layout_margin="5dp"
                    android:src="@raw/five"
                    android:background="@drawable/image_background"/>

                <ImageButton
                    android:id="@+id/six"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="fitCenter"
                    android:layout_margin="5dp"
                    android:src="@raw/six"
                    android:background="@drawable/image_background"/>

                <ImageButton
                    android:id="@+id/seven"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="fitCenter"
                    android:layout_margin="5dp"
